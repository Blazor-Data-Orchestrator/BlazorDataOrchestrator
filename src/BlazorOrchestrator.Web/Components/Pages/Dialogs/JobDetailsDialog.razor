    private async Task OnCodeFileChanged()
    {
        if (string.IsNullOrEmpty(selectedCodeFile)) return;
        
        // Save current code before switching
        if (jobCodeEditor != null && !string.IsNullOrEmpty(previousSelectedFile))
        {
            var code = await jobCodeEditor.GetCodeAsync();
            
            // Save to loadedCodeModel if available
            if (loadedCodeModel != null)
            {
                CodeEditorService.SetFileContent(loadedCodeModel, previousSelectedFile, code);
            }
            
            // Also save to file storage
            FileStorage.SetFile(JobId, previousSelectedFile, code);
        }
        
        // Load new file content
        string fileContent;
        
        if (loadedCodeModel != null)
        {
            // Get content from the loaded code model
            fileContent = CodeEditorService.GetFileContent(loadedCodeModel, selectedCodeFile);
        }
        else
        {
            // Try to get from file storage
            fileContent = FileStorage.GetFile(JobId, selectedCodeFile) ?? "";
        }
        
        if (string.IsNullOrEmpty(fileContent))
        {
            // Generate default content based on file type
            fileContent = GetDefaultContentForFile(selectedCodeFile);
            
            // Store the default content
            if (loadedCodeModel != null)
            {
                CodeEditorService.SetFileContent(loadedCodeModel, selectedCodeFile, fileContent);
            }
            FileStorage.SetFile(JobId, selectedCodeFile, fileContent);
        }
        
        currentJobCode = fileContent;
        previousSelectedFile = selectedCodeFile;
        
        // Update editor state
        var state = FileStorage.GetEditorState(JobId) ?? new EditorState();
        state.SelectedFile = selectedCodeFile;
        FileStorage.SetEditorState(JobId, state);
        
        if (jobCodeEditor != null)
        {
            await jobCodeEditor.UpdateCodeAsync(currentJobCode);
            await jobCodeEditor.UpdateLanguageAsync(GetMonacoLanguageForJob());
        }
        
        StateHasChanged();
    }

    private string GetDefaultContentForFile(string fileName)
    {
        var lowerFileName = fileName.ToLowerInvariant();
        
        if (lowerFileName.EndsWith(".json"))
        {
            return CodeEditorService.GetDefaultAppSettings();
        }
        if (lowerFileName.EndsWith(".cs") || lowerFileName.EndsWith(".py"))
        {
            return CodeEditorService.GetDefaultTemplate(codeLanguage);
        }
        if (lowerFileName == "requirements.txt")
        {
            return "# Python dependencies\n# Add your pip packages here\n";
        }
        
        return "";
    }

