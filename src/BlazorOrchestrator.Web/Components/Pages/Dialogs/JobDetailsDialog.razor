                    FileStorage.SetFile(JobId, selectedCodeFile, currentJobCode);
                    if (loadedCodeModel != null)
                    {
                        CodeEditorService.SetFileContent(loadedCodeModel, selectedCodeFile, currentJobCode);
                    }
                }
                
                // Get the main code file for compilation
                var mainFileName = codeLanguage == "csharp" ? "main.cs" : "main.py";
                var mainCode = FileStorage.GetFile(JobId, mainFileName) ?? currentJobCode;
                
                // Compile code with dependencies
                CompilationResult compilationResult;
                if (codeLanguage == "csharp")
                {
                    // Use dependency-aware compilation if dependencies are available
                    if (loadedCodeModel?.Dependencies?.Any() == true)
                    {
                        compilationResult = await CSharpCompiler.CompileWithDependenciesAsync(
                            mainCode, loadedCodeModel.Dependencies);
                    }
                    else
                    {
                        // Fall back to dependency-aware compilation without explicit deps
                        // (still loads standard references like EF Core, BlazorDataOrchestrator.Core)
                        compilationResult = await CSharpCompiler.CompileWithDependenciesAsync(mainCode);
                    }
                }
                else
                {
                    compilationResult = PythonValidator.Validate(mainCode);
                }
                
                if (!compilationResult.Success)
                {
                    await ShowCompilationErrorsDialog(compilationResult.Errors);
                    return;
                }
                
                // Create and upload NuGet package
                var codeModel = FileStorage.ToCodeModel(JobId);
                var blobName = await PackageService.CreateAndUploadPackageAsync(Job.Id, codeModel);
                
                Job.JobCodeFile = blobName;
            }
