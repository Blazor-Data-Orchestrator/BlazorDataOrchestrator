    /// <summary>
    /// Loads all files from the job's NuGet package when entering Editor mode.
    /// Shows a loading indicator within the Code tab while loading.
    /// </summary>
    private async Task LoadPackageFilesAsync()
    {
        if (Job == null || string.IsNullOrEmpty(Job.JobCodeFile) || hasLoadedPackageFiles)
        {
            // No package to load, but still initialize if not done
            if (!codeEditorInitialized)
            {
                await InitializeCodeEditor();
            }
            return;
        }
        
        // Show loading state
        isExtractingPackageFiles = true;
        StateHasChanged();
        
        // Small delay to ensure UI updates
        await Task.Delay(50);
        
        try
        {
            // Download the package from blob storage
            var packageStream = await JobManager.DownloadJobPackageAsync(Job.Id);
            
            if (packageStream != null)
            {
                // Extract all files - pass a placeholder language, actual will come from config
                loadedCodeModel = await CodeEditorService.ExtractAllFilesFromPackageAsync(
                    packageStream, codeLanguage);
                
                // Update language from configuration.json (the ExtractAllFilesFromPackageAsync 
                // method reads the SelectedLanguage from configuration.json and sets it in the model)
                codeLanguage = loadedCodeModel.Language;
                
                // Log dependency info for debugging
                Console.WriteLine($"[LoadPackageFilesAsync] Loaded code model with {loadedCodeModel.Dependencies?.Count ?? 0} dependencies");
                if (loadedCodeModel.Dependencies?.Any() == true)
                {
                    foreach (var dep in loadedCodeModel.Dependencies)
                    {
                        Console.WriteLine($"  - {dep.PackageId} v{dep.Version}");
                    }
                }
                else
                {
                    Console.WriteLine($"[LoadPackageFilesAsync] No dependencies found. NuspecContent length: {loadedCodeModel.NuspecContent?.Length ?? 0}");
                }
                
                // Update the file dropdown list based on discovered language
                UpdateFileListForLanguage();
                
                // Update the file dropdown list
                if (loadedCodeModel.DiscoveredFiles.Any())
                {
                    codeFileList = loadedCodeModel.DiscoveredFiles;
                    selectedCodeFile = codeFileList.FirstOrDefault();
                    previousSelectedFile = selectedCodeFile;
                    
                    // Load the first file's content
                    if (selectedCodeFile != null)
                    {
                        currentJobCode = CodeEditorService.GetFileContent(loadedCodeModel, selectedCodeFile);
                    }
                }
                
                // Also initialize file storage from the code model
                FileStorage.InitializeFromCodeModel(JobId, loadedCodeModel);
                
                hasLoadedPackageFiles = true;
                codeEditorInitialized = true;
                
                _logger.LogInformation("Loaded {Count} files from package for job {JobId} with language {Language}", 
                    codeFileList.Count, Job.Id, codeLanguage);
            }
            else
            {
                // Package download failed, initialize with defaults
                await InitializeCodeEditor();
            }
        }
        catch (Exception ex)
        {
            _logger.LogError(ex, "Failed to load package files for job {JobId}", Job?.Id);
            NotificationService.Notify(NotificationSeverity.Warning, "Warning", 
                "Could not load existing code package. Using default template.");
            await InitializeCodeEditor();
        }
        finally
        {
            // Hide loading state
            isExtractingPackageFiles = false;
            StateHasChanged();
        }
    }
    
