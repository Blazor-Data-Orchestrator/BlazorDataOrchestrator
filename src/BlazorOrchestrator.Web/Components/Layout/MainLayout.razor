@using Radzen
@using Radzen.Blazor
@inherits LayoutComponentBase
<RadzenComponents @rendermode="InteractiveServer" />
<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="1rem" Style="margin-left: auto;">
                <RadzenButton Icon="notifications" ButtonStyle="ButtonStyle.Light" Variant="Variant.Text" Size="ButtonSize.Medium" />
                <RadzenButton Text="Sign out" Icon="logout" ButtonStyle="ButtonStyle.Light" Variant="Variant.Outlined" Size="ButtonSize.Small" />
            </RadzenStack>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<footer class="footer px-4">
    Version: @CurrentVersion
</footer>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    // This should match the CurrentVersion constant in Home.razor
    private const string CurrentVersion = "1.0";
}
