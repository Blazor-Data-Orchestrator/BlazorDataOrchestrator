@using System.Data
@using Dapper   
@inherits LayoutComponentBase
@inject IDbConnection Db // Or your actual DbContext/service
<RadzenComponents @rendermode="InteractiveServer" />
<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<footer class="footer px-4">
    @footerText
</footer>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    private string footerText = "Loading...";

    protected override async Task OnInitializedAsync()
    {
        string? githubVersion = null;
        string? dbVersion = null;

        try
        {
            var httpClient = new HttpClient();
            githubVersion = (await httpClient.GetStringAsync("https://raw.githubusercontent.com/Blazor-Data-Orchestrator/BlazorDataOrchestrator/main/SQLVersion")).Trim();
        }
        catch
        {
            footerText = "Unable to fetch SQL Version from GitHub";
            return;
        }

        try
        {
            // Dapper example, adapt to your data access
            var result = await Db.QueryFirstOrDefaultAsync<string>("SELECT [Version] FROM [Version] WHERE [Type] = 'SQL'");
            dbVersion = result?.Trim();
        }
        catch
        {
            footerText = "Unable to fetch SQL Version from database";
            return;
        }

        if (githubVersion == dbVersion)
        {
            footerText = $"SQL Version: {dbVersion}";
        }
        else
        {
            footerText = "SQL Version not up to date";
        }
    }
}
