@using BlazorApp1.Components.Pages
@code {
    [Parameter] public InstallationModel Model { get; set; }
    class Option { public string Label { get; set; } public string Value { get; set; } }
    List<Option> storageOptions = new() {
        new Option { Label = "Azure (Managed)", Value = "managed" },
        new Option { Label = "Manual Connection", Value = "manual" }
    };
}
<div class="rz-p-2">
    <RadzenAlert AlertStyle="AlertStyle.Info" ShowIcon="true" Variant="Variant.Flat" Shade="Shade.Lighter" Class="rz-mb-4">Configure storage services (Blob, Table, Queue).</RadzenAlert>
    <div class="rz-mb-4">
        <RadzenText TextStyle="TextStyle.Subtitle2" TagName="TagName.H3">Blob Storage</RadzenText>
        <RadzenDropDown @bind-Value="Model.BlobType" Data="@storageOptions" TextProperty="Label" ValueProperty="Value" Style="width:100%" />
        @if (Model.BlobType == "manual") { <RadzenTextBox @bind-Value="Model.BlobString" Placeholder="Blob connection string" Style="width:100%" Class="rz-mt-2" /> }
    </div>
    <div class="rz-mb-4">
        <RadzenText TextStyle="TextStyle.Subtitle2" TagName="TagName.H3">Table Storage</RadzenText>
        <RadzenDropDown @bind-Value="Model.TableType" Data="@storageOptions" TextProperty="Label" ValueProperty="Value" Style="width:100%" />
        @if (Model.TableType == "manual") { <RadzenTextBox @bind-Value="Model.TableString" Placeholder="Table connection string" Style="width:100%" Class="rz-mt-2" /> }
    </div>
    <div class="rz-mb-4">
        <RadzenText TextStyle="TextStyle.Subtitle2" TagName="TagName.H3">Queue Storage</RadzenText>
        <RadzenDropDown @bind-Value="Model.QueueType" Data="@storageOptions" TextProperty="Label" ValueProperty="Value" Style="width:100%" />
        @if (Model.QueueType == "manual") { <RadzenTextBox @bind-Value="Model.QueueString" Placeholder="Queue connection string" Style="width:100%" Class="rz-mt-2" /> }
    </div>
</div>
