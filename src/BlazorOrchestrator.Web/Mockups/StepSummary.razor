@using BlazorApp1.Components.Pages
@code {
    [Parameter] public InstallationModel Model { get; set; }
}
<div class="rz-p-2">
    <RadzenAlert AlertStyle="AlertStyle.Info" ShowIcon="true" Variant="Variant.Flat" Shade="Shade.Lighter" Class="rz-mb-4">Review configuration before installation.</RadzenAlert>
    <RadzenCard Class="rz-mb-3">
        <RadzenText TextStyle="TextStyle.Subtitle2">Admin Account</RadzenText>
        <RadzenText TextStyle="TextStyle.Body2">User: <strong>@Model.AdminUser</strong></RadzenText>
        <RadzenText TextStyle="TextStyle.Body2">Email: <strong>@Model.AdminEmail</strong></RadzenText>
    </RadzenCard>
    <RadzenCard Class="rz-mb-3">
        <RadzenText TextStyle="TextStyle.Subtitle2">Database</RadzenText>
        <RadzenText TextStyle="TextStyle.Body2">Type: <strong>@Model.DbConnectionType</strong></RadzenText>
        @if(Model.DbConnectionType == "manual") { <RadzenText TextStyle="TextStyle.Caption">@Model.DbConnectionString</RadzenText> }
    </RadzenCard>
    <RadzenCard Class="rz-mb-3">
        <RadzenText TextStyle="TextStyle.Subtitle2">Storage</RadzenText>
        <RadzenText TextStyle="TextStyle.Body2">Blob: <strong>@Model.BlobType</strong></RadzenText>
        @if(Model.BlobType == "manual") { <RadzenText TextStyle="TextStyle.Caption">@Model.BlobString</RadzenText> }
        <RadzenText TextStyle="TextStyle.Body2">Table: <strong>@Model.TableType</strong></RadzenText>
        @if(Model.TableType == "manual") { <RadzenText TextStyle="TextStyle.Caption">@Model.TableString</RadzenText> }
        <RadzenText TextStyle="TextStyle.Body2">Queue: <strong>@Model.QueueType</strong></RadzenText>
        @if(Model.QueueType == "manual") { <RadzenText TextStyle="TextStyle.Caption">@Model.QueueString</RadzenText> }
    </RadzenCard>
</div>
